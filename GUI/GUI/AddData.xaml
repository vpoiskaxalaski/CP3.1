<Window x:Class="GUI.AddData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="AddData" Height="550" Width="600">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="10">
                <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}">COMMING DATE</TextBlock>
                <Calendar Name="CommingDate"/>
            </StackPanel>
            <StackPanel Margin="10">
                <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}">LEAVING DATE</TextBlock>
                <Calendar Name="LeavingDate"/>
            </StackPanel>
        </StackPanel>
        <Button 
            Name="Confirm"
            VerticalAlignment="Bottom"
            Margin="10"
            Width="120"
            Content="OK"
            Click="Confirm_Click" />

    </StackPanel>
</Window>
